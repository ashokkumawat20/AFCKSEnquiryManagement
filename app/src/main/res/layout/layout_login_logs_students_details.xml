<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="beforeDescendants">

    <LinearLayout
        android:id="@+id/lead_Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_background_selector"
        android:descendantFocusability="afterDescendants"
        android:orientation="vertical"
        android:paddingBottom="@dimen/spacing_medium">

        <LinearLayout
            android:id="@+id/i_prebatch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#556199"
            android:orientation="horizontal"
            android:padding="@dimen/spacing_small"
            android:weightSum="1">


            <TextView
                android:id="@+id/view_courses_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="left|center"
                android:text=""
                android:textColor="@color/back_c"
                android:textSize="16sp"
                android:textStyle="bold" />


        </LinearLayout>
<LinearLayout
    android:id="@+id/clickLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone"
    android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/spacing_small"
            android:weightSum="1">

            <TextView
                android:id="@+id/view_mobile"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".8"
                android:gravity="center|left"
                android:background="@android:color/transparent"
                android:textColor="@color/text_c"
                android:textSize="14sp" />
            <ImageView
                android:id="@+id/callingButton"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_marginTop="@dimen/spacing_small"
                android:layout_marginLeft="1dp"
                android:layout_weight=".1"
                android:src="@drawable/call_icon" />
            <ImageView
                android:id="@+id/whatsappeButton"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="2dp"
                android:layout_weight=".1"
                android:src="@drawable/whatsaap_img" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/spacing_small"
            >

            <TextView
                android:id="@+id/login_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:textColor="@color/text_c"
                android:textSize="14sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/spacing_small"
           >

            <TextView
                android:id="@+id/user_inBatch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:textColor="@color/text_c"
                android:textSize="14sp" />

        </LinearLayout>
</LinearLayout>
    </LinearLayout>
</FrameLayout>
